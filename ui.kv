<FirstScreen>:
    BoxLayout:
        padding: 30
        orientation: 'vertical'
        Label:
            text: "Введите ID"
            color: 0,0,0,1
            bold: True
            underline:False
            font_size: 25
            size_hint: 1,.8
        BoxLayout:
            spacing: 50
            padding: 30
            orientation: 'vertical'
            TextInput:
                id: id_txt
                size_hint: 1,.5
            Button:
                text: "ВОЙТИ"
                background_normal: ''
                background_color: .58, .8, .71, 1
                color: 0,0,0,1
                size_hint: 1,.5
                on_press:root.read_id(id_txt.text), root.show_screen()

<DoctorScreen>
    BoxLayout:
        padding: 30
        spacing: 10
        orientation: 'vertical'
        Label:
            id: id_hello
            color: 0,0,0,1
            bold: False
            underline:True
            font_size: 15
            size_hint: 1,.2
        GridLayout:
            cols: 5
            rows: 4
            Label:
                text: "ФИО"
                underline:True
                size_hint: 1,.6
                color: 0,0,0,1
                size_hint: 1,.2
            Label:
                text: "Палата"
                underline:True
                size_hint: 1,.6
                color: 0,0,0,1
                size_hint: 1,.2
            Label:
                text: "Статус"
                underline:True
                size_hint: 1,.6
                color: 0,0,0,1
                size_hint: 1,.2
            Label:
                text: "Анализ"
                underline:True
                size_hint: 1,.6
                color: 0,0,0,1
                size_hint: 1,.2
            Label:
                text: "Диагноз"
                underline:True
                size_hint: 1,.6
                color: 0,0,0,1
                size_hint: 1,.2
            TextInput:
                id: id_name
                text: ""
            TextInput:
                id: id_room
                text: ""
            TextInput:
                id: id_status
                text: ""
            TextInput:
                id: id_analysis
                text: ""
            TextInput:
                id: id_diagnosis
                text: ""

        Button:
            text: "СОХРАНИТЬ"
            background_normal: ''
            background_color: .58, .8, .71, 1
            color: 0,0,0,1
            size_hint: 1,.2
            on_press: root.read_patient(id_name.text), root.read_status(id_status.text), root.read_analysis(id_analysis.text), root.read_diagnosis(id_diagnosis.text)


<PatientScreen>
    BoxLayout:
        padding: 30
        spacing: 20
        orientation: 'vertical'
        Label:
            id: id_hello
            color: 0,0,0,1
            underline:True
            font_size: 15
            size_hint: 1,.1
        Label:
            id: id_date
            color: 0,0,0,.8
            bold: False
            font_size: 15
            size_hint: 1,.1
        Button:
            text: "Расписание"
            background_normal: ''
            background_color: .58, .8, .71, 1
            color: 0,0,0,1
            size_hint: 1,.2
            on_press: root.show_time_table_screen()
        Button:
            text: "  Анализы \nПроцедуры"
            background_normal: ''
            background_color: .58, .8, .71, 1
            color: 0,0,0,1
            size_hint: 1,.2
            on_press: root.show_analysis_screen()
        Button:
            text: "О диагнозе"
            background_normal: ''
            background_color: .58, .8, .71, 1
            color: 0,0,0,1
            size_hint: 1,.2
            on_press: root.show_diagnosis_screen()
        Button:
            text: "SOS"
            background_normal: ''
            background_color: .85, .33, .31, 1
            color: 1,1,1,1
            size_hint: 1,.2
            on_press: root.send_notification()

